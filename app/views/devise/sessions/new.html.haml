%h1 Log in
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  %div
    %br/
    = f.email_field :email, autofocus: true, class: "form-control", placeholder: 'Enter email here...'
  %div
    %br/
    = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: 'Enter password here...'
  - if devise_mapping.rememberable?
    %div
      = f.check_box :remember_me
      = f.label :remember_me
  %div= f.submit "Log in", class: 'btn btn-success btn-block'
= render "devise/shared/links"
